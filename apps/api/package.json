{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsup",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "dev": "tsx --watch src/server.ts",
    "db:generate": "typeorm-ts-node-esm migration:generate src/database/migrations/init -d src/database/data-source.ts",
    "db:run": "typeorm-ts-node-esm migration:run -d src/database/data-source.ts",
    "db:revert": "typeorm-ts-node-esm migration:revert -d src/database/data-source.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@repo/schemas": "workspace:*",
    "@sentry/node": "^10.23.0",
    "@types/bcryptjs": "^3.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  }
}
